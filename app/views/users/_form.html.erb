<%= form_with(model: user, local: true, id: "meishi-form") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-dismissible alert-danger">
      <ul class="m-0">
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert">×</button>
    </div>
  <% end %>

  <div class="form-group row mt-4">
    <div class="col-md-3 col-form-label">
      <%= form.label :login %><span class="text-danger">*</span>
    </div>
    <div class="col-md-6" style="margin-left: -10px">
      <%= form.text_field :login, placeholder: "octocat", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= form.label :twitter_account %><span class="text-danger">*</span>
    </div>
    <div class="col-md-6">
      <div class="input-group" style="margin-left: -10px">
        <div class="input-group-prepend">
          <div class="input-group-text">@</div>
        </div>
        <%= form.text_field :twitter_account, placeholder: "octocat", class: "form-control" %>
      </div>
    </div>
  </div>

  <div id="submit" class="actions">
    <%= form.submit "作成する", data: { disable_with: "作成中…" }, class: "btn btn-success" %>
  </div>

  <div id="loading"></div>
  <div id="text"></div>
<% end %>
